fn quicksort(arr: &mut [i32]) {
    if arr.len() <= 1 {
        return;
    }

    let pivot = arr[0];
    let mut i = 0;
    let mut j = arr.len() - 1;

    while i < j {
        while arr[i] < pivot {
            i += 1;
        }

        while arr[j] > pivot {
            j -= 1;
        }

        if i < j {
            arr.swap(i, j);
        }
    }

    quicksort(&mut arr[0..j]);
    quicksort(&mut arr[j + 1..arr.len()]);
}

